{
  "defaultConnection": "default",
  "connections": {
    "default": {
      "connector": "mongoose",
      "settings": {
        "uri": "${process.env.DATABASE_URI || 'mongodb://localhost:27017'}",
        "database": "${process.env.DATABASE_NAME || 'strapi'}"
      },
      "options": {
        "ssl": "${process.env.DATABASE_SSL || false}"
      }
    }
  }
}
